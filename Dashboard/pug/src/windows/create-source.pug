+bs-input("Nombre", "Fuente de datos")
+bs-select("Protocolo", "protocol")
    +bs-option("mqtt-config", "MQTT")
    +bs-option("sql-config" , "SQL")
div.sel-content.protocol
    div.sel-pane(id='mqtt-config')
        +bs-input("URL", "http://")
        +bs-input("Usuario")
        +bs-input("Contaseña")
        +bs-input("Topico", "Sensor1/var1")
    div.sel-pane(id="sql-config", class="hide")
        +bs-input("URL/IP", "http://")
        +bs-input("Usuario")
        +bs-input("Contaseña")
        +bs-textarea("Query", 2, "SELECT *\nFROM ;")
+bs-button("Guardar fuente")
